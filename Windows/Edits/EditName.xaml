<UserControl x:Class="Anime_Organizer.Windows.Edits.EditName"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Anime_Organizer.Windows.Edits" 
             xmlns:usercontrols="clr-namespace:Anime_Organizer.Windows.UserControls"
             mc:Ignorable="d" 
             MinWidth="600" MaxWidth="1000" FontSize="18" FontFamily="/Anime Organizer;component/Fonts/#CC Wild Words" Loaded="EditName_Loaded">

    <Border Background="{DynamicResource BackgroundColor}" BorderBrush="{DynamicResource WindowBorderColor}" BorderThickness="1" SnapsToDevicePixels="True" VerticalAlignment="Center">
        <StackPanel Background="{DynamicResource BackgroundColor}" SnapsToDevicePixels="True" Margin="10,0,10,0">
            <Label Content="Edit Nickname" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" BorderBrush="{DynamicResource ControlForeground}" BorderThickness="1"/>
            <usercontrols:Titles x:Name="titles" VerticalAlignment="Top" Margin="0,20,0,0"/>
            <usercontrols:ConfirmCancel x:Name="confirmCancel" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,20"/>
        </StackPanel>
    </Border>

</UserControl>
