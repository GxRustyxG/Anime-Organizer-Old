                                        <Border BorderBrush="{DynamicResource WindowBorderColor}" HorizontalAlignment="Center" VerticalAlignment="Top" BorderThickness="1" Margin="5" Padding="10,0,0,0" Width="166" Height="34">
                                            <CheckBox Content="Shounen" Width="154" IsTabStop="False" Height="32" FontSize="16" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                                            <Border.ToolTip>
                                                <ToolTip Content="Anime that are targeted towards the &quot;young boy&quot; market. The usual topics for this involve fighting, friendship and sometimes super powers." Width="400"/>
                                            </Border.ToolTip>
                                        </Border>
                                        <Border BorderBrush="{DynamicResource WindowBorderColor}" HorizontalAlignment="Center" VerticalAlignment="Top" BorderThickness="1" Margin="5" Padding="10,0,0,0" Width="166" Height="34">
                                            <CheckBox Content="Shounen Ai" Width="154" IsTabStop="False" Height="32" FontSize="16" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                                            <Border.ToolTip>
                                                <ToolTip Content="Anime whose central theme is about a relationship (or strong affection, not usually sexual) between two boys or men. Shounen Ai literally means &quot;boy love&quot;, but could be expressed as &quot;male bonding&quot;." Width="400"/>
