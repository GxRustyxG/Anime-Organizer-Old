                                                <ToolTip Content="Anime whose main character(s) have powers beyond normal humans. Often it looks like magic, but can't really be considered magic; usually ki-attacks, flying or superhuman strength." Width="400"/>
                                            </Border.ToolTip>
                                        </Border>
                                        <Border BorderBrush="{DynamicResource WindowBorderColor}" HorizontalAlignment="Center" VerticalAlignment="Top" BorderThickness="1" Margin="5" Padding="10,0,0,0" Width="166" Height="34">
                                            <CheckBox Content="Supernatural" Width="154" IsTabStop="False" Height="32" FontSize="16" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
