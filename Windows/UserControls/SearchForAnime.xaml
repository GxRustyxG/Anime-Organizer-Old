            <DataGrid x:Name="dataGrid" PreviewMouseWheel="DataGrid_PreviewMouseWheel" LoadingRowDetails="LoadingRowDetails" VerticalAlignment="Top" MinHeight="100" Margin="0,150,0,0" ColumnHeaderHeight="30" CanUserAddRows="False" CanUserResizeRows="False" CanUserSortColumns="False" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="0" RowHeight="50" ScrollViewer.CanContentScroll="True" AutoGenerateColumns="False" RowHeaderStyle="{StaticResource DataGridRowHeaderAlt}" SelectionUnit="Cell" SelectionMode="Single" RowDetailsVisibilityMode="VisibleWhenSelected" SelectedCellsChanged="DataGrid_SelectedCellsChanged" LoadingRow="DataGrid_LoadingRow" AreRowDetailsFrozen="True">

                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="dataGridContextMenu" Header="Select This Anime" Click="Anime_Chosen_Click"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>

                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <ScrollViewer x:Name="scrollViewer" Margin="0,0,0,0" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Left" VerticalAlignment="Top" FlowDirection="RightToLeft" Width="{Binding ElementName=dataGrid, Path=ActualWidth, Converter={StaticResource RowDMainWidthConverter}}" Height="{Binding ElementName=dataGrid, Path=ActualHeight, Converter={StaticResource RowDMainHeightConverter}}">
                            <Grid Background="{DynamicResource BackgroundColor}">
                                <Border BorderBrush="{DynamicResource ControlBorderBrush}" Margin="10" BorderThickness="2" HorizontalAlignment="Right" VerticalAlignment="Top" DockPanel.Dock="Top">
                                    <Image Margin="5" Source="{Binding ImageURL, Converter={StaticResource ImageURLConverter}}" Width="175" MaxHeight="280" Height="Auto" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                                </Border>
                                <StackPanel>
                                    <Border BorderBrush="{DynamicResource ControlBorderBrush}" MinHeight="264" Margin="10 10 209 0" BorderThickness="2" VerticalAlignment="Top" FlowDirection="LeftToRight">
                                        <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Top">
                                            <Border BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="2" Margin="5">
                                                <Grid>
                                                    <Label Content="title" HorizontalAlignment="Center" Height="27" VerticalAlignment="Top" FontSize="16"/>
                                                    <Rectangle Width="46" Fill="{DynamicResource ControlForeground}" Height="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,21,0,0"/>
                                                    <Label Content="{Binding Title}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,25,0,0" FontSize="16"/>
                                                </Grid>
                                            </Border>
                                            <Border BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="2" Margin="5">
                                                <Grid>
                                                    <Label Content="type" HorizontalAlignment="Center" VerticalAlignment="Top" Height="27" FontSize="16"/>
                                                    <Rectangle Width="40" Fill="{DynamicResource ControlForeground}" Height="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,21,0,0"/>
                                                    <Label Content="{Binding Type}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,25,0,0" FontSize="16"/>
                                                </Grid>
                                            </Border>
                                            <Border BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="2" Margin="5">
                                                <Grid>
                                                    <Label Content="Episodes" HorizontalAlignment="Center" VerticalAlignment="Top" Height="27" FontSize="16"/>
                                                    <Rectangle Width="80" Fill="{DynamicResource ControlForeground}" Height="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,21,0,0"/>
                                                    <Label Content="{Binding Episodes}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,25,0,0" FontSize="16"/>
                                                </Grid>
                                            </Border>
                                            <Border BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="2" Margin="5">
                                                <Grid>
                                                    <Label Content="mal id" HorizontalAlignment="Center" VerticalAlignment="Top" Height="27" FontSize="16"/>
                                                    <Rectangle Width="58" Fill="{DynamicResource ControlForeground}" Height="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,21,0,0"/>
                                                    <Label Content="{Binding MalId}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,25,0,0" FontSize="16"/>
                                                </Grid>
                                            </Border>
                                            <Border BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="2" Margin="5">
                                                <Grid>
                                                    <Label Content="airing" HorizontalAlignment="Center" VerticalAlignment="Top" Height="27" FontSize="16"/>
                                                    <Rectangle Width="58" Fill="{DynamicResource ControlForeground}" Height="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,21,0,0"/>
                                                    <Label Content="{Binding Airing}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,25,0,0" FontSize="16"/>
                                                </Grid>
                                            </Border>
                                            <Border BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="2" Margin="5">
                                                <Grid>
                                                    <Label Content="rating" HorizontalAlignment="Center" VerticalAlignment="Top" Height="27" FontSize="16"/>
                                                    <Rectangle Width="60" Fill="{DynamicResource ControlForeground}" Height="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,21,0,0"/>
                                                    <Label Content="{Binding Rated}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,25,0,0" FontSize="16"/>
                                                </Grid>
                                            </Border>
                                            <Border BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="2" Margin="5">
                                                <Grid>
                                                    <Label Content="score" HorizontalAlignment="Center" VerticalAlignment="Top" Height="27" FontSize="16"/>
                                                    <Rectangle Width="56" Fill="{DynamicResource ControlForeground}" Height="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,21,0,0"/>
                                                    <Label Content="{Binding Score}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,25,0,0" FontSize="16"/>
                                                </Grid>
                                            </Border>
                                            <Border BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="2" Margin="5">
                                                <Grid>
                                                    <Label Content="start date" HorizontalAlignment="Center" VerticalAlignment="Top" Height="27" FontSize="16"/>
                                                    <Rectangle Width="98" Fill="{DynamicResource ControlForeground}" Height="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,21,0,0"/>
                                                    <Label Content="{Binding StartDate}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,25,0,0" FontSize="16"/>
                                                </Grid>
                                            </Border>
                                            <Border BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="2" Margin="5">
                                                <Grid>
                                                    <Label Content="end date" HorizontalAlignment="Center" VerticalAlignment="Top" Height="27" FontSize="16"/>
                                                    <Rectangle Width="84" Fill="{DynamicResource ControlForeground}" Height="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,21,0,0"/>
                                                    <Label Content="{Binding EndDate}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,25,0,0" FontSize="16"/>
                                                </Grid>
                                            </Border>
                                        </WrapPanel>
                                    </Border>
                                    <Border BorderBrush="{DynamicResource ControlBorderBrush}" Margin="0,80,0,0" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Top">
                                        <Label Content="Description" HorizontalAlignment="Left" VerticalAlignment="Top" Height="27" FontSize="16"/>
                                    </Border>
                                    <Border BorderBrush="{DynamicResource ControlBorderBrush}" Margin="10,-1,10,10" BorderThickness="2" Padding="10 2 10 10">
                                        <TextBlock x:Name="descriptionTBlock" FontSize="16" LineStackingStrategy="BlockLineHeight" LineHeight="25" Text="{Binding Description, StringFormat={}{0}}" FlowDirection="LeftToRight"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>

                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Info" Width="60" CanUserResize="False" CanUserReorder="False" ClipboardContentBinding="{x:Null}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ContentControl Style="{DynamicResource MoreInfoVector}" Height="40"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Name" Width="600" Binding="{Binding Title}" CanUserReorder="False" MinWidth="63">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>

            </DataGrid>
            
