<UserControl x:Class="Anime_Organizer.Windows.UserControls.CurrentlyAiring"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Anime_Organizer.Windows.UserControls"
             mc:Ignorable="d" 
             FontFamily="/Anime Organizer;component/Fonts/#CC Wild Words" FontSize="18">

    <Border Background="{DynamicResource BackgroundColor}" BorderBrush="{DynamicResource WindowBorderColor}" BorderThickness="1" SnapsToDevicePixels="True">
        <StackPanel Margin="10">
            <Label Content="Currently Airing" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <ComboBox x:Name="airingCBox" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0" Padding="5">
                <ComboBoxItem Content="true"/>
                <ComboBoxItem Content="false"/>
            </ComboBox>
        </StackPanel>
    </Border>

</UserControl>
