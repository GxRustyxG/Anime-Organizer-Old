<UserControl x:Class="Anime_Organizer.Windows.UserControls.Description"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Anime_Organizer.Windows.UserControls"
             mc:Ignorable="d" 
             FontSize="18" FontFamily="/Anime Organizer;component/Fonts/#CC Wild Words">

    <Border Background="{DynamicResource BackgroundColor}" BorderBrush="{DynamicResource WindowBorderColor}" BorderThickness="1" SnapsToDevicePixels="True">
        <StackPanel Margin="10">
            <Label Content="Description (optional)" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="descriptionTBox" TextWrapping="Wrap" Margin="0,5,0,0" AcceptsReturn="True" TextBlock.LineHeight="22" TextBlock.LineStackingStrategy="BlockLineHeight" Padding="3,0,2,0" VerticalScrollBarVisibility="Auto" VerticalAlignment="Top" Height="317" HorizontalAlignment="Center" Width="624"/>
        </StackPanel>
    </Border>

</UserControl>
