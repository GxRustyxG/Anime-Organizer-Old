<UserControl x:Class="Anime_Organizer.Windows.UserControls.ConfirmCancel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Anime_Organizer.Windows.UserControls"
             mc:Ignorable="d" 
             FontSize="18" FontFamily="/Anime Organizer;component/Fonts/#CC Wild Words">

    <Border Background="{DynamicResource BackgroundColor}" BorderBrush="{DynamicResource WindowBorderColor}" BorderThickness="1" SnapsToDevicePixels="True">
        <Grid Margin="10">
            <Button x:Name="confirm" Content="Confirm" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,150,0" Padding="5" Width="95"/>
            <Button x:Name="cancel" Content="Cancel" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="150,0,0,0" Padding="5" Width="95"/>
        </Grid>
    </Border>

</UserControl>
